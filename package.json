{
  "name": "veganblatt-static-site",
  "version": "1.0.1",
  "description": "Static site generator for VeganBlatt",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit --strict",
    "lint": "eslint \"src/**/*.ts\"",
    "validate:html": "html-validate 'public/**/*.html'",
    "validate": "tsx src/scripts/tests/full-validation.ts",
    "test:unit": "tsx src/scripts/tests/test-generation.ts",
    "test:sitemap": "tsx src/tests/test-sitemap.ts",
    "test:recipe-schema": "tsx src/scripts/tests/recipe-schema.test.ts",
    "test:recipes-itemlist": "tsx src/scripts/tests/recipes-itemlist.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:screenshots": "playwright test -g 'Visual screenshots'",
    "test": "npm run test:unit && npm run test:sitemap && npm run test:recipe-schema && npm run test:recipes-itemlist && npm run validate",
    "test:all": "npm run test:unit && npm run test:sitemap && npm run test:recipe-schema && npm run test:recipes-itemlist && npm run validate",
    "test:fulltest": "npm run test:unit && npm run test:sitemap && npm run test:recipe-schema && npm run test:recipes-itemlist && npm run test:e2e && npm run validate",
    "build:css": "tsx src/scripts/build-css.ts",
    "generate": "tsx src/scripts/generate-site.ts",
    "createjsonindex": "tsx src/scripts/build-search-index.ts",
    "bump-version": "tsx src/scripts/bump-version.ts",
    "deps:ensure": "npm ci --include=dev",
    "build": "npm run deps:ensure && npm run typecheck && npm run lint && npm run build:css && npm run generate && npm run createjsonindex && npm run test",
    "publish": "tsx src/scripts/publish-site.ts",
    "clean": "rm -rf public/*.html public/a public/r public/css/styles.css",
    "clean:copyright": "tsx src/scripts/clean-data-copyright.ts",
    "remove:emojis": "tsx src/scripts/remove-all-emojis.ts",
    "serve": "npx http-server public -p 8080",
    "deploy": "./scripts/full-deploy.sh",
    "deploy:fulltest": "./scripts/full-deploy-with-e2e.sh",
    "deplpy": "npm run deploy",
    "deplopy": "npm run deploy",
    "deploy:simple": "npm run build && npx wrangler pages deploy public --project-name=veganblatt-static --commit-dirty=true",
    "postdeploy": "./scripts/post-deploy-check.sh",
    "deploy:preview": "npm run build && npx wrangler pages deploy public --project-name=veganblatt-static --branch=preview --commit-dirty=true",
    "deploy:test": "npm run deploy && npm run postdeploy",
    "test:live": "./scripts/post-deploy-check.sh",
    "audit": "tsx src/scripts/image-copyright-audit.ts",
    "health": "./scripts/health-check.sh",
    "monitor": "./scripts/monitor.sh",
    "monitor:watch": "watch -n 60 ./scripts/monitor.sh"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/node-fetch": "^2.6.13",
    "dotenv": "^17.2.2",
    "gray-matter": "^4.0.3",
    "marked": "^11.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/finalhandler": "^1.2.4",
    "@types/node": "^20.10.0",
    "@types/serve-static": "^1.15.8",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "finalhandler": "^2.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "html-validate": "^10.0.0",
    "http-server": "^14.1.1",
    "minisearch": "^7.1.2",
    "playwright": "^1.55.0",
    "png-to-ico": "^3.0.1",
    "serve-static": "^2.2.0",
    "sharp": "^0.34.3",
    "svg2img": "^1.0.0-beta.2",
    "tsx": "^4.6.0",
    "typescript": "^5.9.2",
    "wrangler": "^4.33.1"
  }
}
